<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTask"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/colorSub"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/txtTitle"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="KKK"
                android:textSize="15dp"
                android:layout_below="@id/colorSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_alignParentRight="true"
                android:layout_below="@id/colorSub"
                android:src="@drawable/ic_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtContent"
                android:paddingLeft="10dp"
                android:text="lsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer ..."
                android:textSize="15dp"
                android:textColor="@color/task_gray"
                android:layout_below="@id/txtTitle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>