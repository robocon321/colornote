<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.colornote.customview.CustomCardView
        android:id="@+id/cvTask"
        app:cardCornerRadius="10dp"
        app:contentPadding="1dp"
        app:cardElevation="2dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/colorSub"
                android:background="@color/black"
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTitle"
                    android:textColor="?attr/colorControlNormal"
                    android:textStyle="bold"
                    android:text="KKK"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/imgCheck"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtContent"
                    android:text="lsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer klasjdflsakdjjf oiwer ..."
                    android:textSize="15dp"
                    android:maxLines="2"
                    android:textColor="?attr/colorControlNormal"
                    android:layout_below="@id/txtTitle"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtTime"
                    android:text="9:03"
                    android:textColor="@color/task_gray"
                    android:textSize="12dp"
                    android:layout_below="@id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.example.colornote.customview.CustomCardView>
</LinearLayout>