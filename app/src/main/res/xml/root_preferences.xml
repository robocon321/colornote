            app:iconSpaceReserved="false"/>
        <com.jaredrummler.android.colorpicker.ColorPreferenceCompat
            android:defaultValue="0xFFF7D539"
            android:key="default_color"
            android:layout_width="200dp"
            android:title="Default color"
            app:cpv_colorShape="square"
            app:cpv_allowCustom="false"
            app:cpv_colorPresets="@array/color_palette"
            app:cpv_previewSize="regular"
            app:cpv_showColorShades="false"

            app:iconSpaceReserved="false"/>
    </PreferenceCategory>
